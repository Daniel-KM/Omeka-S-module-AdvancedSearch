<?= $this->pageTitle(sprintf($translate('Search page "%1$s" (%2$s)'), $searchConfig->name(), $searchConfig->path())) ?>

<div id="page-actions">
    <button form="search-form-configure"><?= $translate('Save page') ?></button>
</div>

<?= $this->form($form) ?>
