<?php
/**
 * @var \Laminas\View\Renderer\PhpRenderer $this
 * @var \AdvancedSearch\Form\Admin\SearchSuggesterForm $form
 */

$plugins = $this->getHelperPluginManager();
$assetUrl = $plugins->get('assetUrl');
$translate = $plugins->get('translate');

$this->headLink()
    ->appendStylesheet($assetUrl('css/advanced-search-manager.css', 'AdvancedSearch'));
$this->headScript()
    ->appendFile($assetUrl('js/advanced-search-manager.js', 'AdvancedSearch'), 'text/javascript', ['defer' => 'defer']);

$this->htmlElement('body')->appendAttribute('class', 'search-admin search-suggester resource edit');

$form->prepare();
?>

<?= $this->pageTitle($translate('Edit suggester'), 1, $translate('Search manager')) ?>

<?= $this->form()->openTag($form) ?>
<div id="page-actions">
    <button type="submit" class="button"><?= $translate('Save') ?></button>
</div>
<?= $this->formCollection($form) ?>
<?php $this->trigger('view.edit.form.after'); ?>
<?= $this->form()->closeTag() ?>
<?php $this->trigger('view.edit.after'); ?>

<?php
// Check if form has settings elements (added by internal or external modules).
$settingsFieldset = $form->has('o:settings') ? $form->get('o:settings') : null;
$hasSettings = $settingsFieldset && count($settingsFieldset->getElements()) > 0;
?>
<?php if (!$hasSettings): ?>
<p class="explanation">
    <?= $translate('This search engine adapter does not have specific suggester settings. For external suggesters, use the direct url in the search config.') ?>
</p>
<?php endif; ?>