<?php
/**
 * @var \Laminas\View\Renderer\PhpRenderer $this
 * @var \Omeka\Api\Representation\SiteRepresentation $site
 * @var \Search\Api\Representation\SearchPageRepresentation $searchPage
 * @var bool $displayResults
 * @var \Search\Query $query
 * @var \Search\Response $response
 * @var string $heading
 */

$escape = $this->plugin('escapeHtml');
?>

<?php if (empty($displayResults) || empty($searchPage)): ?>

<div class="block-search">
    <?php if (!empty($heading)): ?>
    <h2><?= $escape($heading) ?></h2>
    <?php endif; ?>
    <?= $this->searchingForm() ?>
</div>

<?php else: ?>

<?php if (!empty($heading)): ?>
<div class="block-search">
    <h2><?= $this->escapeHtml($heading) ?></h2>
</div>
<?php endif; ?>

<?php $this->vars()->offsetUnset('displayResults') ?>
<?php $this->vars()->offsetSet('skipFormAction', true) ?>
<?= $this->partial('search/index/search') ?>

<?php endif; ?>
