 */

$translate = $this->plugin('translate');
$escape = $this->plugin('escapeHtml');
$url = $this->plugin('url');
?>

<?php $this->htmlElement('body')->appendAttribute('class', 'search-admin resource browse'); ?>

<?= $this->pageTitle($translate('Search manager')) ?>

<div id="page-actions">
    <a class="button" href="<?= $url('admin/search/index', ['action' => 'add']) ?>"><?= $translate('Add new index') ?></a>
    <?php if (!empty($search_indexes)): ?>
        <a class="button" href="<?= $url('admin/search/page', ['action' => 'add']) ?>"><?= $translate('Add new page') ?></a>
    <?php endif; ?>
</div>

<h2><?= $translate('Indexes') ?></h2>
<?php if (count($search_indexes) > 0): ?>
    <table class="tablesaw" data-tablesaw-mode="stack">
        <thead>
            <tr>
                <th><?= $translate('Name') ?></th>
                <th><?= $translate('Adapter') ?></th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($search_indexes as $search_index): ?>
                <tr>
                    <td>
                        <span><?= $search_index->name() ?></span>
                        <ul class="actions">
                            <?php if ($search_index->adapter()): ?>
                                <li>
                                    <?= $search_index->link('', 'edit', [
                                        'class' => 'o-icon-edit',
                                        'aria-label' => $translate('Edit'),
                                        'title' => $translate('Edit'),
                                    ]) ?>
                                </li>
                                <li>
                                    <a href="#"
                                    data-sidebar-content-url="<?= $escape($search_index->url('index-confirm')) ?>"
                                    class="o-icon- fa fa-refresh fa-sync sidebar-content"
                                    aria-label="<?= $escape($translate('Reindex all')) ?>"
                                    title="<?= $escape($translate('Reindex all')) ?>"></a>
                                </li>
                            <?php endif; ?>
                            <li>
                                <a href="#"
                                data-sidebar-content-url="<?= $escape($search_index->url('delete-confirm')) ?>"
                                class="o-icon-delete sidebar-content"
                                aria-label="<?= $escape($translate('Delete')) ?>"
                                title="<?= $escape($translate('Delete')) ?>"></a>
                            </li>
                        </ul>
                    </td>
                    <td><?= $search_index->adapterLabel() ?></td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
<?php else: ?>
    <p><?= $translate('No search indexes created yet.') ?></p>
<?php endif; ?>

<h2><?= $translate('Pages') ?></h2>
<?php if (count($search_pages) > 0): ?>
    <table class="tablesaw" data-tablesaw-mode="stack">
        <thead>
            <tr>
                <th><?= $translate('Name') ?></th>
                <th><?= $translate('Path') ?></th>
                    <th><?= $translate('Index') ?></th>
                <th><?= $translate('Form') ?></th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($search_pages as $search_page): ?>
                <tr>
                    <td>
                        <span><?= $search_page->name() ?></span>
                        <ul class="actions">
                            <li>
                                <?= $search_page->link('', 'edit', [
                                    'class' => 'o-icon-edit',
                                    'title' => $translate('Edit'),
                                ]) ?>
                            </li>
                            <?php if ($search_page->index()->adapter()): ?>
                            <li>
                                <?= $search_page->link('', 'configure', [
                                    'class' => 'o-icon- fa fa-sliders fa-sliders-h',
                                    'title' => $translate('Configure facets and sort fields'),
                                ]) ?>
                            </li>
                            <?php endif; ?>
                            <li>
                                <a href="#"
                                data-sidebar-content-url="<?= $escape($search_page->url('delete-confirm')) ?>"
                                class="o-icon-delete sidebar-content"
                                aria-label="<?= $escape($translate('Delete')) ?>"
                                title="<?= $escape($translate('Delete')) ?>"></a>
                            </li>
                        </ul>
                    </td>
                    <td><?= $search_page->path() ?></td>
                    <td><?= $search_page->index()->name() ?></td>
                    <td>
                        <?php
                            $formAdapter = $search_page->formAdapter();
                            if ($formAdapter) {
                                echo $formAdapter->getLabel();
                            } else {
                                echo $search_page->formAdapterName();
                            }
                        ?>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
<?php else: ?>
    <p><?= $translate('No search pages created yet.') ?></p>
<?php endif; ?>

<div class="sidebar">
    <a href="#"
        class="sidebar-close o-icon-close"
        aria-label="<?= $escape($translate('Close')) ?>"
        title="<?= $escape($translate('Close')) ?>"></a>
    <div class="sidebar-content"></div>
</div>
