/**
 * @var \Laminas\View\Renderer\PhpRenderer $this
 * @var \Omeka\Api\Representation\AbstractResourceEntityRepresentation $resource
 * @var string $tag
 */

$plugins = $this->getHelperPluginManager();
$translate = $plugins->get('translate');
$hyperlink = $plugins->get('hyperlink');
?>

<?= sprintf('<%s class="%s resource">', $tag, $resource->resourceName()) ?>
    <div class="resource-thumbnail">
        <?php $media = $resource->primaryMedia(); ?>
        <?= $hyperlink->raw(
            $media
                ? $this->thumbnail($media, 'square', ['title' => $media->displayTitle(), 'alt' => $media->mediaType() . ' thumbnail'])
                : '<img src="' . $this->assetUrl('thumbnails/default.png', 'Omeka') . '" title="' . $translate('No media') . '"/>',
            $resource->url()
        ) ?>
    </div>
    <div class="resource-metadata">
        <h4><?= $resource->link($resource->displayTitle()) ?></h4>
        <?php if ($description = $resource->displayDescription()): ?>
            <div class="description">
                <?= $description ?>
            </div>
        <?php endif; ?>
    </div>
<?= sprintf('</%s>', $tag) ?>
